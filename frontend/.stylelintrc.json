{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": [
    "**/node_modules/**",
    "**/.next/**",
    "dist/**",
    "coverage/**"
  ],
  "rules": {
    "alpha-value-notation": null,
    "color-function-notation": null,
    "selector-max-id": 0,
    "selector-class-pattern": null,
    "unit-allowed-list": ["%", "deg", "rem", "ms", "dvh", "px", "vw", "fr"]
  },
  "defaultSeverity": "warning"
}
